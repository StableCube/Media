<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Company>Stable Cube</Company>
    <PackageId>StableCube.Media.ImageMagick</PackageId>
    <Title>StableCube.Media.ImageMagick</Title>
    <Description>Tools for building and running ImageMagick commands</Description>
    <IsPackable>true</IsPackable>
    <RepositoryUrl>https://github.com/StableCube/Media</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" />
    <PackageReference Include="CliWrap" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StableCube.Media.ImageMagick.DataModel" />
    <PackageReference Include="StableCube.Media.ImageMagick.CommandBuilder" />
  </ItemGroup>
</Project>
